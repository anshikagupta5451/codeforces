#include <iostream>
#include<bits/stdc++.h>
#include<math.h>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    int a[n];
	    for(int i=0;i<n;i++)
	    {
	        cin>>a[i];
	    }
	    int mx=a[0];
	    int mn=a[0];
	    for(int i=0;i<n;i++)
	    {
	   
	        
	            mx=max(mx,a[i]);
	            mn=min(mn,a[i]);
	        
	    }
	    
	    if(mx==mn)
	    cout<<"0"<<endl;
	    else
	    cout<<mx-mn<<endl;
	    
	}
	return 0;
}
